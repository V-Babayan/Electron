{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src/**/**/**/*"],
  "exclude": ["node_modules"]
}
